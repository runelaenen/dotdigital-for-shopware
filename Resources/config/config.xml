<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/platform/trunk/src/Core/System/SystemConfig/Schema/config.xsd">
    <card>
        <title>Tracking</title>

        <input-field type="checkbox">
            <name>siteRoiTrackingEnabled</name>
            <label>Enable site and ROI tracking</label>
        </input-field>

        <input-field type="single-select">
            <name>region</name>
            <label>Select region</label>
            <options>
                <option>
                    <id>1</id>
                    <name>Region 1</name>
                </option>
                <option>
                    <id>2</id>
                    <name>Region 2</name>
                </option>
                <option>
                    <id>3</id>
                    <name>Region 3</name>
                </option>
            </options>
        </input-field>

        <input-field type="text">
            <name>wbtProfileId</name>
            <label>Web behavior tracking profile ID</label>
        </input-field>
    </card>

    <card>
        <title>Abandoned carts</title>

        <input-field type="checkbox">
            <name>acEnabled</name>
            <label>Enable abandoned cart</label>
        </input-field>

        <input-field type="text">
            <name>acProgramId</name>
            <label>Abandoned cart program ID</label>
        </input-field>

        <input-field type="int">
            <name>acDelay</name>
            <label>Allow abandoned cart delay (minutes)</label>
        </input-field>

        <input-field type="checkbox">
            <name>acAllowNonSubscribers</name>
            <label>Allow abandoned cart for non-subscribed contacts</label>
        </input-field>

        <input-field type="single-select">
            <name>acInsightsMethod</name>
            <label>Cart Insights collection method</label>
            <options>
                <option>
                    <id>cart_info</id>
                    <name>Cart Info</name>
                </option>
                <option>
                    <id>cart_json</id>
                    <name>Cart.json</name>
                </option>
            </options>
        </input-field>
    </card>
</config>
